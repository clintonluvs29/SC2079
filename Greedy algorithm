def nearest_neighbour(start, n):
    visited = [False] * n
    path = []

    v = start
    path.append(v)
    visited[v] = True

    # repeat until all vertices are visited
    for _ in range(n - 1):
        nearest = None
        min_dist = float('inf')

        for w in range(n):
            if not visited[w]:
                d = distance(v, w)
                if d < min_dist:
                    min_dist = d
                    nearest = w

        path.append(nearest)
        visited[nearest] = True
        v = nearest

    return path
